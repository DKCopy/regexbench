{
  "rules": [
    {"name": "option-caseless", "content": "/(?i)abc/"},
    {"name": "option-allow_duplicate", "content": "/def(?J)abc/"},
    {"name": "option-multiline", "content": "/(?m)^./"},
    {"name": "option-dotall", "content": "/(?s).*/"},
    {"name": "option-lazy", "content": "/(?U)abc*?/"},
    {"name": "option-extended", "content": "/(?x)a b c/"},
    {"name": "option-unset", "content": "/(?i)te(?-i)st/"},
    {"name": "option-match_limit", "content": "/(*LIMIT_MATCH=2)abcabc/"},
    {"name": "option-recursion_limit", "content": "/(*LIMIT_RECURSION=2)abcabc/"},
    {"name": "option-no_auto_possess", "content": "/(*NO_AUTO_POSSESS)abcdefabc/"},
    {"name": "option-no_start_opt", "content": "/(*NO_START_OPT)abcdefabc/"},
    {"name": "option-newline_cr_only", "content": "/(*CR)abc/"},
    {"name": "option-newline_lf_only", "content": "/(*LF)abc/"},
    {"name": "option-newline_crlf", "content": "/(*CRLF)abc/"},
    {"name": "option-newline_anycrlf", "content": "/(*ANYCRLF)abc/"},
    {"name": "option-newline_any", "content": "/(*ANY)abc/"},
    {"name": "option-bsr_anycrlf", "content": "/(*BSR_ANYCRLF)abc/"}
  ],

  "grammars": [
    {"name": "option-caseless"},
    {"name": "option-allow_duplicate"},
    {"name": "option-multiline"},
    {"name": "option-dotall"},
    {"name": "option-lazy"},
    {"name": "option-extended"},
    {"name": "option-unset"},
    {"name": "option-match_limit"},
    {"name": "option-recursion_limit"},
    {"name": "option-no_auto_possess"},
    {"name": "option-no_start_opt"},
    {"name": "option-newline_cr_only"},
    {"name": "option-newline_lf_only"},
    {"name": "option-newline_crlf"},
    {"name": "option-newline_anycrlf"},
    {"name": "option-newline_any"},
    {"name": "option-bsr_anycrlf"}
  ],

  "patterns": [
    {"name": "option-caseless", "content": "aaabaadfbabcaaabaaaacABC"},
    {"name": "option-allow_duplicate", "content": "defabcabcdefabc"},
    {"name": "option-multiline", "content": "ab\n\ndef"},
    {"name": "option-dotall", "content": "ab\n\ndef"},
    {"name": "option-lazy", "content": "ABCabcdefgaaaABCabc"},
    {"name": "option-extended", "content": "abcdefabcdef"},
    {"name": "option-unset", "content": "TEst"},
    {"name": "option-match_limit", "content": "abcabcabcabc"},
    {"name": "option-recursion_limit", "content": "abcabcabcabc"},
    {"name": "option-no_auto_possess", "content": "abcdefabc"},
    {"name": "option-no_start_opt", "content": "abcdefabc"},
    {"name": "option-newline_cr_only", "content": "def\\x0Dabc", "ctype": "hex"},
    {"name": "option-newline_lf_only", "content": "def\\x0Aabc", "ctype": "hex"},
    {"name": "option-newline_crlf", "content": "def\\x0Aabc\\x0Dghi\\x0Aabc", "ctype": "hex"},
    {"name": "option-newline_anycrlf", "content": "def\\x0Cabc", "ctype": "hex"},
    {"name": "option-newline_any", "content": "def\\x0Cabc", "ctype": "hex"},
    {"name": "option-bsr_anycrlf", "content": "def\\x0Cabc", "ctype": "hex"}
  ],

  "engines" : ["pcre", "rematch", "hyperscan"],
  "results" : ["match", "nomatch", "error"],

  "tests" : [
